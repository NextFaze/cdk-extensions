{
  "compilerOptions": {
    "lib": ["es2015.promise", "es5", "es6", "es2017.object", "ES2018.Regexp"],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "publish-dist",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "~/cdkx/*": ["packages/*"]
    }
  },
  "exclude": ["dist", "bazel-out", "node_modules"]
}
